#!ipxe

menu Select:
item centos7 CentOS 7
item coreos Core OS Stable Channel
choose target && goto ${target}

:centos7
kernel http://mirror.centos.org/centos/7/os/x86_64/isolinux/vmlinuz text utf8 inst.ks=https://raw.githubusercontent.com/ouspg/secudep/master/boot/centos7.ks
imgverify vmlinuz centos7/vmlinuz.sig
initrd http://mirror.centos.org/centos/7/os/x86_64/isolinux/initrd.img
imgverify initrd.img centos7/initrd.img.sig
boot

:coreos
kernel http://stable.release.core-os.net/amd64-usr/current/coreos_production_pxe.vmlinuz cloud-config-url=http://example.com/pxe-cloud-config.yml
imgverify coreos_production_pxe.vmlinuz coreos/coreos_production_pxe.vmlinuz.sig
initrd http://stable.release.core-os.net/amd64-usr/current/coreos_production_pxe_image.cpio.gz
imgverify coreos_production_pxe_image.cpio.gz coreos/coreos_production_pxe_image.cpio.gz.sig
boot
